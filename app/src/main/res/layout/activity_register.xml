<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.RegisterActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
        <!-- circle image view to show the image -->
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width= "8dp"
            android:id="@+id/profileimage"
            app:civ_border_color= "@color/colorPrimary"
            android:src= "@drawable/logo"
            android:layout_centerInParent= "true"
            android:layout_width= "150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_height= "150dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="    Enter your First Name Here      "
        android:importantForAutofill="no"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colortectfirst"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:maxLength="20"
        android:background="@drawable/backgroundbox"
        android:id="@+id/first_name"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="    Enter your last Name Here      "
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colortectfirst"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:maxLength="20"
            android:background="@drawable/backgroundbox"
            android:id="@+id/last_name"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="    DD/MM/YYYY      "
            android:importantForAutofill="no"
            android:inputType="date"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colortectfirst"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:maxLength="20"
            android:background="@drawable/backgroundbox"
            android:id="@+id/dob"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="    Enter your Address Here      "
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colortectfirst"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:maxLength="20"
            android:background="@drawable/backgroundbox"
            android:id="@+id/address"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="    Enter your mobile number Here      "
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colortectfirst"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:maxLength="10"
            android:background="@drawable/backgroundbox"
            android:id="@+id/mobile"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="30dp"
            android:id="@+id/submit"
            android:textColor="@color/colortectfirst"
            android:textStyle="bold"
            android:background="@drawable/backgroundbutton"/>


    </LinearLayout>


</ScrollView>