<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIRE MAN"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textSize="30dp"/>

    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/hospitality"
                    >

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:background="@color/white"
                        android:layout_height="120dp">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/logo"
                            android:id="@+id/a1"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/a1"
                            android:layout_centerHorizontal="true"

                            android:layout_marginTop="9dp"
                            android:text="Hospitality Service"
                            android:textColor="#000"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/housekeeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    app:cardElevation="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:background="@color/white"
                        android:layout_height="120dp">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/logo"
                            android:id="@+id/a2"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="House Keeper"
                            android:textColor="#000000"

                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/a2"
                            android:textSize="13dp"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:background="@color/white"
                        android:layout_height="120dp">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/logo"
                            android:id="@+id/a4"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driver Service"
                            android:textColor="#000000"

                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/a4"
                            android:textSize="13dp"/>

                    </RelativeLayout>




                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:background="@color/white"
                        android:layout_height="120dp">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/logo"
                            android:id="@+id/a6"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other Service"
                            android:textColor="#000000"

                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/a6"
                            android:textSize="13dp"/>

                    </RelativeLayout>




                </androidx.cardview.widget.CardView>

            </LinearLayout>






        </LinearLayout>


    </GridLayout>
</LinearLayout>