<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtwo"
    android:orientation="vertical"
    tools:context=".Admin.AdminMainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar11"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tool_bar_style"
        android:elevation="4dp"
        android:paddingStart="25dp"
        android:paddingLeft="25dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Admin Control"
        app:titleMarginStart="65dp"
        app:titleMarginTop="4dp"
        android:layout_marginTop="10dp"
        app:titleTextColor="#fff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/addstaff">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/logo"
                                android:id="@+id/a1"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/a1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="9dp"
                                android:text="Add Staff"
                                android:textColor="#000000"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/staffHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/logo"
                                android:id="@+id/a2"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Staff History"
                                android:textColor="#000000"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/a2"
                                android:textSize="13dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/allusers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/logo"
                                android:id="@+id/a4"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Users "
                                android:textColor="#000000"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/a4"
                                android:textSize="13dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/userHistory"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/logo"
                                android:id="@+id/a6"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User History"
                                android:textColor="#000000"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/a6"
                                android:textSize="13dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/allstaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/logo"
                                android:id="@+id/a5"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Staff"
                                android:textColor="#000000"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/a5"
                                android:textSize="13dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </GridLayout>
    </ScrollView>

</LinearLayout>