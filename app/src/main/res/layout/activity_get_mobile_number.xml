<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetMobileNumber">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/sent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/a1"
            android:textColor="@color/colortectfirst"
            android:text="MOBILE NUMBER VERIFICATION"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:id="@+id/a2"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="We willsend you an one time otp on this given mobile number"
            android:textColor="@color/colortextsecond"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/a3"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Enter Your Mobile Number"
            android:textColor="@color/colortextsecond"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:id="@+id/a4"
            android:background="@drawable/backgroundbox"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="+91"

                android:textColor="@color/colortectfirst"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="Enter your Mobile Here"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colortectfirst"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLength="10"
                android:id="@+id/input_mobile_number"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get OTP"
                android:layout_margin="30dp"
                android:id="@+id/grtotp"
                android:textColor="@color/colortectfirst"
                android:textStyle="bold"
                android:background="@drawable/backgroundbutton"/>
            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/progressbar_sending_otp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:text="Create Account ?"
            android:textColor="@color/colortectfirst"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>


</ScrollView>